CREATE TABLE setop (
    UserID INT PRIMARY KEY,
    FavoriteColors VARCHAR(255));
INSERT INTO setop (UserID, FavoriteColors) VALUES (1, 'Red,Blue'), (2, 'Green,Yellow,Blue'), (3, 'Red');
SELECT UserID FROM setop WHERE FIND_IN_SET('Blue', FavoriteColors) > 0;
