CREATE DATABASE test ;
USE test;
CREATE TABLE Students (
    Roll INT NOT NULL AUTO_INCREMENT,
    FirstName VARCHAR(50),
    LastName VARCHAR(50),
    Address VARCHAR(500),
    City VARCHAR(50),
    PRIMARY KEY(Roll));
